<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.sdsu.anuragg.hometownandchatapp.HomeOptionsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_hometown_and_chat_app"
        android:typeface="normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/loginId"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textCapSentences|textPersonName"
        android:ems="10"
        android:id="@+id/loginId"
        tools:ignore="LabelFor"
        android:textAllCaps="false"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/passwordId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordId"
        tools:ignore="LabelFor"
        android:layout_marginBottom="86dp"
        android:layout_above="@+id/loginUserButton"
        android:layout_alignStart="@+id/loginUserButton" />

    <TextView
        android:text="@string/login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginBottom="23dp"
        android:textSize="16sp"
        android:layout_above="@+id/passwordId"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:text="@string/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/passwordId"
        android:layout_toStartOf="@+id/loginUserButton" />

    <Button
        android:text="@string/new_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/newUserButton"
        android:layout_marginStart="223dp"
        android:onClick="createNewUser"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp" />

    <Button
        android:text="@string/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginUserButton"
        android:layout_marginStart="53dp"
        tools:ignore="RtlHardcoded"
        android:onClick="loginUser"
        android:layout_alignBaseline="@+id/newUserButton"
        android:layout_alignBottom="@+id/newUserButton"
        android:layout_toEndOf="@+id/newUserButton" />

</RelativeLayout>
